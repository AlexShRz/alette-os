{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
		"composite": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "vite/client"]
	},
	"include": ["./src/**/*.ts"],
	"references": [
		{
			"path": "../pulse/tsconfig.lib.json"
		},
		{
			"path": "../event-sourcing/tsconfig.lib.json"
		},
		{
			"path": "../signal-test-utils/tsconfig.lib.json"
		}
	],
	"exclude": [
		"vite.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx"
	]
}
