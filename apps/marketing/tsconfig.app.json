{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "dist",
		"types": ["node"],
		"rootDir": "src",
		"tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo"
	},
	"include": [
		"src/**/*.ts",
		"docs/**/*.ts",
		"docs/**/*.vue",
		"docs/**/*.md"
	],
	"vueCompilerOptions": {
		"vitePressExtensions": [".md"]
	},
	"exclude": [
		"out-tsc",
		"dist",
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"vite.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx"
	],
}
