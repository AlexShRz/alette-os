{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false
		},
		"ignore": ["**/*"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"include": ["*.ts", "*.tsx", "*.js", "*.jsx"]
		},
		{
			"include": ["*.ts", "*.tsx"]
		},
		{
			"include": ["*.js", "*.jsx"]
		},
		{
			"include": ["*.json"],
			"linter": {
				"rules": {}
			}
		},
		{
			"include": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"linter": {
				"rules": {
					"correctness": {
						"noConstantCondition": "off",
						"noInvalidUseBeforeDeclaration": "off",
						"useExhaustiveDependencies": "error",
						"useHookAtTopLevel": "error"
					},
					"style": {
						"noNamespace": "off"
					},
					"suspicious": {
						"noEmptyBlockStatements": "off",
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"include": ["*.ts", "*.tsx"]
		},
		{
			"include": ["*.js", "*.jsx"]
		},
		{
			"include": ["*.ts", "*.tsx", "*.js", "*.jsx"]
		},
		{
			"include": ["*.ts", "*.tsx"]
		},
		{
			"include": ["*.js", "*.jsx"]
		},
		{
			"include": ["*.json"],
			"linter": {
				"rules": {}
			}
		},
		{
			"include": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"linter": {
				"rules": {
					"correctness": {
						"noConstantCondition": "off",
						"noInvalidUseBeforeDeclaration": "off",
						"useExhaustiveDependencies": "error",
						"useHookAtTopLevel": "error"
					},
					"style": {
						"noNamespace": "off"
					},
					"suspicious": {
						"noEmptyBlockStatements": "off",
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"include": ["*.ts", "*.tsx"]
		},
		{
			"include": ["*.js", "*.jsx"]
		}
	]
}
